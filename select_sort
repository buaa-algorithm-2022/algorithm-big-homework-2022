# include <stdio.h>

void select_sort(int arr[],int n){
	int i,j,d,temp;
	for(i=0;i<n-1;i++){
		//假设值最小元素为未排序的第一个元素
		d=i;        
		//寻找真正值最小元素，记录其位置d               
		for(j=i+1;j<n;j++)
			if(arr[j]<arr[d])
				d=j;              
		//值最小元素与未排序的第一个元素交换位置
		if(d!=i){
			temp=arr[d];
			arr[d]=arr[i];
			arr[i]=temp;           
		}			
	}
} 


